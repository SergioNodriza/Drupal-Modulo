
{% extends '@fichaje_module/base.html.twig' %}

{% block body %}

  <hr><br>

  <div class="center">

    {%  for empresa in results %}
      <div class="column20">

        {% if empresa.name == actual.empresa%}

          {% if actual.type >= 8 %}

            <a href="/aviso/{{ empresa.name }}">
              <button>
                <img src="{{ empresa.image }}" alt="{{ empresa.name }}" typeof="foaf:Image" class="image-style-thumbnail" width="100" height="100">
              </button>
              <hr class="actualButtonWarning">
            </a>

          {% else %}

            <a href="/fichar/{{ empresa.name }}">
              <button>
                <img src="{{ empresa.image }}" alt="{{ empresa.name }}" typeof="foaf:Image" class="image-style-thumbnail" width="100" height="100">
              </button>
              <hr class="actualButtonOK">
            </a>

          {% endif %}

        {% else %}

          {% if actual.type >= 8 %}

            <a href="/aviso/{{ empresa.name }}">
              <button>
                <img src="{{ empresa.image }}" alt="{{ empresa.name }}" typeof="foaf:Image" class="image-style-thumbnail" width="100" height="100">
              </button>
            </a>

          {% else %}

            <a href="/fichar/{{ empresa.name }}">
              <button>
                <img src="{{ empresa.image }}" alt="{{ empresa.name }}" typeof="foaf:Image" class="image-style-thumbnail" width="100" height="100">
              </button>
            </a>

          {% endif %}

        {% endif %}

      </div>
    {% endfor %}

  </div>

{% endblock %}
